@{
    ViewBag.Title = "Criar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@* titulo *@
<div class="button-mg space-between-divs" role="group" aria-label="...">
    <h1 class="titlemargin">@ViewBag.Message</h1>
</div>
@* fim titulo *@
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-header with-border col-md-12">
            <h3 class="box-title">Novo Cliente</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form role="form">
                <!-- text input -->
                <div class="row">
                    <div class="col-xs-3 col-sm-3 col-md-3">
                        <label>ID:</label>
                        <input class="form-control id-width" placeholder="ID" type="text">
                    </div>
                    <div class="form-group col-xs-5 col-sm-3 col-md-3 pull-right">
                        <label>Estado:</label>
                        <select class="form-control">
                            <option>Activo</option>
                            <option>Inactivo</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Nome</label>
                        <input class="form-control" placeholder="Nome" type="text" />
                    </div>
                    <div class="form-group col-md-6">
                        <label>Apelido</label>
                        <input class="form-control" placeholder="Apelido" type="text" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-xs-6 col-sm-6 col-md-6">
                        <label>Empresa:</label>
                        <select class="form-control">
                            <option>Computed Life</option>
                            <option>Zon Lusomundo Cinemas</option>
                            <option>Worten</option>
                        </select>
                    </div>
                    <div class="form-group col-xs-6 col-sm-6 col-md-6">
                        <label>Cargo na Empresa:</label>
                        <input class="form-control" placeholder="Cargo na Empresa" type="text">
                    </div>
                </div>
                <div class="form-group col-md-12 row">
                    <h4>Contactos</h4>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6 col-md-3">
                        <label>Telemóvel:</label>
                        <input class="form-control" placeholder="Telemóvel" type="text">
                    </div>
                    <div class="form-group col-sm-6 col-md-3">
                        <label>Email:</label>
                        <input class="form-control" placeholder="Email" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12 col-md-6">
                        <label>Morada:</label>
                        <input class="form-control" placeholder="Morada" type="text">
                    </div>
                    <div class="form-group col-xs-6 col-sm-6 col-md-4">
                        <label>Localidade:</label>
                        <input class="form-control" placeholder="Localidade" type="text">
                    </div>
                    <div class="form-group col-xs-6 col-sm-6 col-md-2">
                        <label>Código Postal</label>
                        <input class="form-control" placeholder="Código Postal" type="text" />
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer col-md-12">
            <button class="btn btn-success">Criar</button>
            <input class="btn btn-danger pull-right" Type="button" VALUE="Cancelar" onClick="history.go(-1);return true;">
        </div>
    </div>
</div>