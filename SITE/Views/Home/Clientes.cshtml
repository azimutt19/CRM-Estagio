<!-- Modal criar -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Novo Cliente</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form role="form">
                    <!-- text input -->
                    <div class="form-group">
                        <label>ID:</label>
                        <input class="form-control id-width" placeholder="" type="text">
                        <div class="form-group">
                            <label>Estado:</label>
                            <select class="form-control">
                                <option>Activo</option>
                                <option>Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Nome:</label>
                        <input class="form-control" placeholder="" type="text">
                    </div>
                    <div class="form-group">
                        <label>Empresa:</label>
                        <select class="form-control">
                            <option>Computed Life</option>
                            <option>Zon Lusomundo Cinemas</option>
                            <option>Worten</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Cargo na Empresa:</label>
                        <input class="form-control" placeholder="" type="text">
                    </div>
                    <div class="form-group">
                        <label>Telemóvel:</label>
                        <input class="form-control" placeholder="" type="text">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" placeholder="" type="text">
                    </div>
                    <div class="form-group">
                        <label>Morada:</label>
                        <input class="form-control" placeholder="" type="text">
                    </div>
                </form>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a href="~/Home/Editarcliente" class="btn btn-primary pull-right">Criar</a>
                <input class="btn btn-primary pull-right" Type="button" VALUE="Cancelar" onClick="history.go(-1);return true;">
            </div>
        </div>
    </div>
</div>
@* fim do modal Criar *@

