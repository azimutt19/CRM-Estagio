@{
    ViewBag.Title = "Detalhes do Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@* titulo *@
<div class="button-mg space-between-divs" role="group" aria-label="...">
    <h1 class="titlemargin">@ViewBag.Message</h1>
</div>
@* fim titulo *@

<div class="box box-primary">
    @*<div class="box-header with-border">
            <h3 class="box-title"></h3>
        </div>*@
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label for="id">ID</label>
                    <input type="text" readonly="readonly" class="form-control" placeholder="ID" />
                </div>
                <div class="form-group col-md-6">
                    <label for="permissoes">Permissões</label>
                    <input type="text" readonly="readonly" class="form-control col-md-6 pull-right" placeholder="Permissões" />
                </div>
            </div>
            <div>
                <div class="form-group col-md-6">
                    <label for="username">Username</label>
                    <input type="text" readonly="readonly" class="form-control" placeholder="Username" />
                </div>
                <div class="form-group col-md-6">
                    <label for="nome">Nome</label>
                    <input type="text" readonly="readonly" class="form-control" placeholder="Nome" />
                </div>
            </div>
            <div>
                <div class="form-group col-md-6">
                    <label for="telemovel">Telemóvel</label>
                    <input type="text" readonly="readonly" class="form-control" placeholder="Telemóvel" />
                </div>
                <div class="form-group col-md-6">
                    <label for="email">Email</label>
                    <input type="text" readonly="readonly" class="form-control" placeholder="Email" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label>Notas</label>
                <textarea class="form-control" rows="5" placeholder="Escrever ..."></textarea>
            </div>
            <div class="form-group col-md-12">
                <INPUT class="btn btn-danger pull-right" Type="button" VALUE="Voltar" onClick="history.go(-1);return true;">
                <button class="btn btn-success pull-left">Guardar</button>
            </div>
        </div>
        <!-- /.box-body -->
    </form>
</div>


